<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.GameLauncher"
      prefHeight="800.0" prefWidth="1000.0" stylesheets="@../CSS/style.css">
<!--    <Button  styleClass="profile-menu-button" text="pause" layoutX="900" layoutY="160"/>-->
    <HBox layoutX="5" layoutY="5">
        <VBox layoutX="10" layoutY="10" prefHeight="70" prefWidth="70" styleClass="game-info">
            <Label fx:id="rocketNumber" layoutY="30" layoutX="40" styleClass="font" />
            <ImageView fx:id="rocket" fitHeight="70.0" fitWidth="70.0" layoutY="20" layoutX="20" pickOnBounds="true" preserveRatio="true"/>
        </VBox>
        <VBox layoutX="50" layoutY="10" prefHeight="70" prefWidth="70" styleClass="game-info">
            <Label fx:id="nuclearBombNumber" layoutY="30" layoutX="40" styleClass="font" />
            <ImageView fx:id="nuclearBomb" fitHeight="70.0" fitWidth="70.0" layoutY="20" layoutX="20" pickOnBounds="true" preserveRatio="true"/>
        </VBox>
        <VBox layoutX="90" layoutY="10" prefHeight="70" prefWidth="70" styleClass="game-info">
            <Label fx:id="clusterBombNumber" layoutY="30" layoutX="40" styleClass="font" />
            <ImageView fx:id="clusterBomb" fitHeight="70.0" fitWidth="70.0" layoutY="20" layoutX="20" pickOnBounds="true" preserveRatio="true" />
        </VBox>
    </HBox>
    <VBox layoutX="870" prefHeight="300">
        <VBox layoutX="870" layoutY="10" prefHeight="90" prefWidth="130" styleClass="game-info">
            <Label fx:id="username" alignment="CENTER" layoutY="30" layoutX="60" styleClass="font" />
            <ImageView fx:id="userAvatar" fitHeight="70.0" fitWidth="70.0" layoutY="20" layoutX="20" pickOnBounds="true" preserveRatio="true"/>
        </VBox>
        <VBox layoutX="800" layoutY="10" prefHeight="70" prefWidth="70" styleClass="game-info">
            <Label fx:id="killNumber" layoutY="30" layoutX="40" styleClass="font" />
            <ImageView fx:id="killNumberImage" fitHeight="70.0" fitWidth="70.0" layoutY="20" layoutX="20" pickOnBounds="true" preserveRatio="true"/>
        </VBox>
        <HBox layoutY="120" layoutX="870" prefWidth="130" prefHeight="50" styleClass="game-info">
            <Label fx:id="waveNumber" alignment="CENTER" layoutY="30" layoutX="40" style="-fx-font-family: Chilanka; -fx-text-fill: #000000; -fx-font-size: 20; -fx-font-weight: bold"  />
        </HBox>
    </VBox>
    <ImageView layoutX="950" layoutY="270" fitHeight="40" fitWidth="40" fx:id="pauseButton" styleClass="profile-menu-button" onMouseClicked="#pauseGame" preserveRatio="true" pickOnBounds="true"/>
    <VBox alignment="CENTER"  fx:id="pauseMenu" layoutX="220.0" layoutY="160.0" prefHeight="380.0" prefWidth="609.0" spacing="10" style=" -fx-background-color: transparent;-fx-background-radius: 30px; -fx-border-color: #0c2672; -fx-border-radius: 30px; -fx-border-width: 20" styleClass="pause-menu">
        <GridPane alignment="CENTER" hgap="15" prefWidth="570.0" vgap="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Button onAction="#pauseMusic" prefHeight="60" prefWidth="200" styleClass="profile-menu-button" text="Mute" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button onAction="#keyGuide" prefHeight="60" prefWidth="200" styleClass="profile-menu-button" text="Guide" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button onAction="#changeMusic" prefHeight="60" prefWidth="200" styleClass="profile-menu-button" text="Change Music" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button onAction="#exitWithSave" prefHeight="60" prefWidth="200" styleClass="profile-menu-button" text="Save and Exit" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button onAction="#exitWithoutSave" prefHeight="60" prefWidth="200" styleClass="profile-menu-button" text="Exit" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Button fx:id="returnToGameButton" mnemonicParsing="false" onAction="#returnToGame" prefHeight="64.0" prefWidth="194.0" styleClass="profile-menu-button" text="Return to Game" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
<!--        <Button fx:id="returnToGameButton" mnemonicParsing="false" onAction="#returnToGame" prefHeight="64.0" prefWidth="194.0" styleClass="profile-menu-button" text="Return to Game" textAlignment="CENTER">-->
